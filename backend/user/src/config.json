{
    "helmet": {
        "contentSecurityPolicy": {
            "directives": {
                "defaultSrc": ["'self'"],
                "scriptSrc": ["'self'"],
                "styleSrc": ["'self'"],
                "imgSrc": ["'self'"],
                "fontSrc": ["'self'"],
                "connectSrc": ["'self'"],
                "objectSrc": ["'none'"],
                "mediaSrc": ["'none'"],
                "frameSrc": ["'none'"],
                "upgradeInsecureRequests": []
            }
        },
        "hsts": {
            "maxAge": 31536000,
            "includeSubDomains": true,
            "preload": true
        },
        "referrerPolicy": {
            "policy": "no-referrer"
        },
        "frameguard": {
            "action": "deny"
        }
    },
    "mongoose": {
        "useNewUrlParser": true,
        "useUnifiedTopology": true,
        "useCreateIndex": true
    },
    "session": {
        "resave": false,
        "saveUninitialized": false,
        "cookie": {
            "maxAge": 604800000
        }
    },
    "contextPath": {
        "user": {
            "signup": "/user/signup",
            "login": "/user/login",
            "logout": "/user/logout"
        },
        "google": {
            "auth": "/user/auth/google",
            "callback": "/user/auth/google/callback"
        }
    }
}
